<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Blah blah"
            android:textColor="@color/colorPrimaryOrange"
            android:textSize="70dp"
            android:fontFamily="cursive"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtLoginID_00"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/orange_border"
            android:ems="10"
            android:hint="아이디"
            android:inputType="textUri"
            android:paddingLeft="15dp"
            android:textColorHint="#ffdec5"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edtLoginPW_00"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/orange_border"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColorHint="#ffdec5"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ckSaveId_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimaryOrange"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디 저장"
                android:textColor="@color/colorPrimaryOrange"
                android:textSize="11dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLoginSubmit_00"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border_fill"
            android:text="로그인"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/txtPassChange_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="회원이 아니신가요?    "
                android:textColor="#C7C7C7"
                android:textSize="11dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLoginSignup_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="회원가입하기"
                android:textColor="@color/colorPrimaryOrange"
                android:textSize="11dp"
                android:textStyle="bold" />
        </LinearLayout>
