<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_review" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe_refresh">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qTitle_3"
        android:text="Q. 영상을 떠올리며 다음 내용을 영작하시오."
        android:textSize="20dp"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/q_3"
        android:text="문제 내용"
        android:textSize="20dp"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryOrange"
        android:buttonTint="@color/colorPrimaryOrange"
        android:id="@+id/cb"
        android:text="정답 보기"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:id="@+id/aTitle_3"
        android:text="정답"
        android:textColor="#704501"
        android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/a_3"
        android:text="내 정답"
        android:textColor="#f0a00f"
        android:textSize="20dp"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/btn_stt"
        android:text="Speech to Text"
        android:textColor="#f0a00f"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_margin="15dp"/>

   <!-- <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/Barchart_3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"/>
-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryOrange"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/word_3"
            android:text="단어장"/>
    </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>